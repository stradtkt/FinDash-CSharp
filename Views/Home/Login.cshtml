@model FinDash.Models.LoginUser
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card p-5 mt-5 mb-5">
                <h1 class="text-center">@ViewData["Title"]</h1>
                <form asp-action="LoginUser" asp-controller="Home" method="POST" class="text-center">
                    <div class="form-group">
                        <div class="bg-danger">
                            <span asp-validation-for="Email" placeholder="Email"></span>
                        </div>
                        <input asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <div class="bg-danger">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder="Password">
                    </div>
                    <input type="submit" value="Login" class="btn btn-success btn-round">
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-3">
            <p class="lead text-center">Need to register instead? <a asp-action="Register" asp-controller="Home" asp-area="" class="btn btn-info">Register</a></p>
        </div>
    </div>
</div>
