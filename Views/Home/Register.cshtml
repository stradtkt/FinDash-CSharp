@model FinDash.Models.RegisterUser
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row">
    <div class="col-md-6 offset-3">
        <div class="card p-5 mt-5 mb-5">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <form asp-action="RegisterUser" asp-controller="Home" method="POST" class="text-center">
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="FirstName"></span>
                </div>
                <input asp-for="FirstName" class="form-control" placeholder="First Name">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="LastName"></span>
                </div>
                <input asp-for="LastName" class="form-control" placeholder="Last Name">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="Email"></span>
                </div>
                <input asp-for="Email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="Password"></span>
                </div>
                <input asp-for="Password" class="form-control" placeholder="Password">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="Confirm"></span>
                </div>
                <input asp-for="Confirm" class="form-control" placeholder="Confirm Password">
            </div>
            <input type="submit" value="Register" class="btn btn-success btn-round">
        </form>
    </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 offset-3">
        <p class="lead text-center">Need to log in instead? <a asp-action="Login" asp-controller="Home" asp-area="" class="btn btn-info">Login</a></p>
    </div>
</div>
</div>